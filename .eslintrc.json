{
    "env": {
        "browser": true,
        "es2020": true,
        "jest": true
    },
    "extends": ["eslint:recommended", "prettier", "prettier/standard"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".ts", ".tsx"],
                "moduleDirectory": ["node_modules", "src/"]
            }
        }
    },
    "rules": {
        "semi": "error",
        "indent": ["error", 4],
        "@typescript-eslint/no-unused-vars": ["error"]
    }
}
